sudo vim /etc/init/urlchecker.conf


#conf for upstart for java

description "upstart for java"
author "gooru"

# start when server starts
start on runlevel [2345]
# Stop when server shuts down/reboots
stop on shutdown

setuid ubuntu
setgid ubuntu


 #Respawn the process if it crashes
#If it respawns more than 10 times in 5 seconds stop
respawn
respawn limit 10 5

#expect fork

script
cd /home/ubuntu/urlchecker && ./bin/startjob.sh
end script




---> sudo initctl reload-configuration
